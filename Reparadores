<body>
  <h2>Asignarcion de mesas aleatorios</h2>
  <button id="asignarBtn">Asignar números</button>
  <ul id="listaResultados"></ul>

  <script>
    const nombres = [
      'Jonathan', 'Luis', 'Carlos', 'Elias', 'Jorge', 'Camilo',
      'Pedro', 'Cristian', 'Diego', 'Mario', 'Marcos', 'Leo',
      'Fernando', 'Bastian', 'Raúl', 'Dario', 'David', 'Arturo',
      'Andrés', 'juan', 'Javier', 'Mauricio', 'Miguel', 'Federico'
    ];

    const btn = document.getElementById('asignarBtn');
    const listaResultados = document.getElementById('listaResultados');

    function mezclarNumeros(min, max) {
      const numeros = [];
      for (let i = min; i <= max; i++) {
        numeros.push(i);
      }
      for (let i = numeros.length - 1; i > 0; i--) {
        const j = Math.floor(Math.random() * (i + 1));
        [numeros[i], numeros[j]] = [numeros[j], numeros[i]];
      }
      return numeros;
    }

    btn.addEventListener('click', () => {
      listaResultados.innerHTML = '';

      const numerosAsignados = mezclarNumeros(1, 24);

      nombres.forEach((nombre, index) => {
        const numero = numerosAsignados[index];
        const li = document.createElement('li');
        li.textContent = `${numero} - ${nombre}`;
        listaResultados.appendChild(li);
      });
    });
  </script>
</body>
</html>
